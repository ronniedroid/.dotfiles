#launch a terminal
super + Return
      alacritty

# make sxhkd reload its configuration files:
super + Escape
      pkill -USR1 -x sxhkd
	
# Apps shortcuts

super + x
    rofi -modi drun -show drun -show-icons

# Scripts shortcuts

super + space
      switchkbdlayout.sh 

super + ctrl + p ; {l,e,r,s}
    {betterlockscreen, qtile cmd-obj -o cmd -f shutdown, systemctl reboot, systemctl poweroff}

alt + shift + m
    MonitorLayout.sh

alt + shift + w ; {w,r}
    {wall-d -f -R -d ~/Pictures/wallpapers/, wall-d -f -r}

#pulse Audio controls

super + {Left,Right}
    pamixer {-d,-i} 5


# Sreen brightness controls

super + {Down,Up}
    light {-U,-A} 5


# Media player controls

XF86AudioPlay
	playerctl play
XF86AudioPause
	playerctl pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous
