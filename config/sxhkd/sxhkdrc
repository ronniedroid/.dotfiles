# make sxhkd reload its configuration files:

super + Return
      alacritty

super + Escape
	pkill -USR1 -x sxhkd
	
# Apps shortcuts

super + f
	firefox

super + d
    dmenu_run -h 24

super + e
    emacsclient -c -a emacs

super + n
    emacsclient -c -a '' --eval '(dired nil)'
    #alacritty -e nnn

super + shift + t
    thunderbird

# Scripts shortcuts

super + p
    pmenu.sh

super + m
    MonitorLayout.sh

super + space
    kbdlayout.sh

super + w
		wall-d -f -d $HOME/Pictures/Wallpapers/

super + b ; {a,b,d,y,r}
    bmanager.sh {-a ,-b,-d,-y,-r}

super + c
		confmanager.sh

super + s
		dmenu-scrot.sh

#pulse Audio controls

super + {Left,Right}
    pamixer {-d,-i} 5


# Sreen brightness controls

super + {Down,Up}
		light {-U,-A} 5

# Media player controls

XF86AudioPlay
		playerctl play
XF86AudioPause
		playerctl pause
XF86AudioNext
		playerctl next
XF86AudioPrev
		playerctl previous
