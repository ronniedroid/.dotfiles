#launch a terminal
super + Return
      alacritty

# make sxhkd reload its configuration files:
super + Escape
      pkill -USR1 -x sxhkd
	
# Apps shortcuts

super + a ; {f, t, b, e}
    {firefox, thunderbird, brave, emacs}

super + d
    rofi -modi drun -show drun -show-icons

# Scripts shortcuts

super + space
      switchkbdlayout.sh 

super + p ; {l,e,r,s}
    {betterlockscreen, pkill qtile, systemctl reboot, systemctl poweroff}

alt + shift + m
    MonitorLayout.sh

super + w ; {w,r}
    {wall-d -f -R -d ~/Pictures/wallpapers/, wall-d -f -r}

super + b ; {a,b,d,y,r}
    bmanager.sh {-a ,-b,-d,-y,-r}

alt + shift + c
    confmanager.sh

alt + shift + s
    dmenu-scrot.lua

#pulse Audio controls

super + {Left,Right}
    pamixer {-d,-i} 5


# Sreen brightness controls

super + {Down,Up}
    light {-U,-A} 5


# Media player controls

XF86AudioPlay
	playerctl play
XF86AudioPause
	playerctl pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous
