#launch a terminal
super + Return
      alacritty

# make sxhkd reload its configuration files:
super + Escape
      pkill -USR1 -x sxhkd
	
# Apps shortcuts

super + shift + f
    firefox

super + d
    rofi -modi drun -show drun -show-icons

super + shift + e
    emacsclient -c

super +  shift + t
    thunderbird

# Scripts shortcuts

alt + shift + p
    pmenu.sh

alt + shift + m
    MonitorLayout.sh

alt + shift + space
    switchkbdlayout.sh

alt + shift + w
    wall-d -f -d $home/pictures/wallpapers/

alt + shift + b ; {a,b,d,y,r}
    bmanager.sh {-a ,-b,-d,-y,-r}

alt + shift + c
    confmanager.sh

alt + shift + s
    dmenu-scrot.sh

#pulse Audio controls

super + {Left,Right}
    pamixer {-d,-i} 5


# Sreen brightness controls

super + {Down,Up}
    light {-U,-A} 5

# Media player controls

XF86AudioPlay
	playerctl play
XF86AudioPause
	playerctl pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous
